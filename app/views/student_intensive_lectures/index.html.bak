<h1>Student's page</h1>
<p>
	<div class="container">
		集中講義検索：
		<div class="row">
			<%= form_tag(student_intensive_lectures_path, method: :get) do %>
			    <label>学部</label>
				<%= text_field_tag :faculty %>
				<label>学科</label>
				<%= text_field_tag :department %>
				<label>検索ワード</label>
				<%= text_field_tag :search_word %>
				<%= submit_tag '検索' %>
			<% end %>
    	</div>
    	<div class="row">
    		<div class="col-md-6">
    			集中講義登録：
    		</div>
    		<div class="col-md-6">
    			<%= form_tag(student_intensive_lectures_path, method: :post) do %>
    			<table class="table table-bordered">
					<thead class="thead">
				  		<tr>
				  			<th>選択</th>
				    		<th>講義名</th>
				    		<th>教員名</th>
				  		</tr>
					</thead>
				 	<tbody>
				 			<% lectureCount = 0 %>
				    		<% @intensive_lectures.each do |lecture| %>
				    		<% lectureCount += 1 %>
					   		<tr>
					   			<td>
					   				<%= check_box_tag 'selected_lecture', value = lecture.name %>
					   			</td>
					     		<td>
					     			<%= lecture.name %>
					     		</td>
					     		<td>
					      			<%  if lectureCount <= TeacherLecture.count
					      				teacher_lecture = TeacherLecture.find_by(lecture_id: lecture.id)
					      			%>
					       			<%= Teacher.find(teacher_lecture.teacher_id).name %>
					       			<% end %>
					     		</td>
					   		</tr>
				   		<% end %>
					</tbody>
				</table>
    		</div>
    	</div>
  			<%= submit_tag 'OK' %>
			<% end %>
    		<%= button_to "戻る", {controller: 'student_homes', action: 'index'}, {method: :get, class: "btn btn-default"}%>
    	</div>
	</div>
</p>