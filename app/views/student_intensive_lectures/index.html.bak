<h1>Student's page</h1>
<p>
	<div class="container">
		集中講義検索：
		<div class="row">
			<form>
        		<label>学部</label>
        		<input type="text" name="undergraduate">
        		<label>学科</label>
        		<input type="text" name="department">
        		<label>検索ワード</label>
        		<input type="text" name="searchword">
        		<button type="submit">検索</button>
    		</form>
    	</div>
    	<div class="row">
    		<div class="col-md-6">
    			集中講義登録：
    		</div>
    		<div class="col-md-6">
    			<table class="table table-bordered">
					<thead class="thead">
				  		<tr>
				    		<th>講義名</th>
				    		<th>教員名</th>
				  		</tr>
					</thead>
				 	<tbody>
				    	<% @intensive_lectures.each do |lecture|%>
					   		<tr>
					     		<td><%= lecture.name %></td>
					     		<td>
					     			<!--
					      			<% lecture.teachers.each do |a| %>
					       				<%= a.name%>
					         		<%end%>
					         		-->
					         		<%= lecture.day %>
					     		</td>
					   		</tr>
				   		<%end%>
					</tbody>
				</table>
    		</div>
    	</div>
    	<div class="row">
    		<%= button_to "ＯＫ", {controller: 'student_homes', action: 'index'}, {method: :get, class: "btn btn-default"}%>
    		<%= button_to "戻る", {controller: 'student_homes', action: 'index'}, {method: :get, class: "btn btn-default"}%>
    	</div>
	</div>
</p>