<%= form_for @teacher, url: {action: :create} do |f| %>
    <h1>教員の登録</h1>
    
    <% if @teacher.errors.any? %>
    <div>
        <% @teacher.errors.full_messages.each do |msg| %>
            <p><%= msg %></p>
        <% end %>
    </div>
    <% end%>
    
    <div>
        <%= f.label "メールアドレス" %><br />
        <%= f.text_field :email %>
    </div>

    <div>
        <%= f.label "教員名" %><br />
        <%= f.text_field :name %>
    </div>

    <br />
    <div>
        <%= f.submit "OK", class: "btn btn-outline-secondary", data: {confirm: "登録しますか?"}%>
    </div>

    <br />
    <div>
        <%= link_to "戻る", :back, class: "btn btn-outline-secondary"%>
    </div>

<% end %>
